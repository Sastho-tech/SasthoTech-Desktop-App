{
  "name": "electron-multi-server-app",
  "version": "1.0.3",
  "description": "Electron app running three Node.js servers",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always",
    "build:css": "tailwindcss -i ./styles.css -o ./output.css --watch",
    "dev": "concurrently \"npm run build:css\" \"electron .\"",
    "build:msi": "electron-builder --win msi"
  },
  "build": {
    "appId": "com.sasthotech.hms",
    "productName": "Sasthotech Server Manager",
    "publish": [
      {
        "provider": "github",
        "owner": "Sastho-tech",
        "repo": "SasthoTech-Desktop-App"
      }
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.15",
    "axios": "^1.7.5",
    "dotenv": "^16.4.5",
    "electron-log": "^5.1.7",
    "electron-updater": "^6.2.1",
    "express": "^4.17.1",
    "fs-extra": "^11.2.0",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10"
  }
}
